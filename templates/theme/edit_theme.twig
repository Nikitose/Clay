{% extends 'admin.twig' %}

{% block main %}
<form action="admin.php?page=theme&action=update" class="form-admin" method="post" enctype="multipart/form-data">
	<input type="hidden" name="id" readonly value="{{ theme.id }}">
	<input type="text" name="nom" placeholder="Nom" value="{{ theme.nom }}">
	<input type="text" name="description" placeholder="Description" value="{{ theme.description }}">
	<input type="text" name="old-image" value="{{ theme.image }}">
	<input type="file" name="image">
	<input type="submit" value="Envoyer">
</form>
{% endblock %}
