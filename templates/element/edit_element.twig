{% extends 'admin.twig' %}

{% block main %}
<form class="block" action="admin.php?page=element&action=update" method="post" enctype="multipart/form-data">
    <input type="hidden" name="id" readonly value="{{ element.id }}">
    <input type="hidden" name="id_article" value="{{ element.id_article }}">
    <input type="hidden" name="ordre" value="{{ element.ordre }}">
    <input type="text" name="nom" placeholder="Titre" value="{{ element.nom }}">
    <textarea cols="100" rows="10" name="description" placeholder="Description">{{ element.description }}</textarea>
    <input type="file" name="image" value="{{ element.image }}">
    <input type="text" name="prix" placeholder="Prix" value="{{ element.prix }}">
    <input type="text" name="prix_heure" placeholder="Prix par heure" value="{{ element.prix_heure }}">
    <input type="text" name="vendeur" placeholder="Vendeur" value="{{ element.vendeur }}">
    <p><input type="submit" value="Envoyer"></p>
</form>
{% endblock %}